<h1>Eat-Da-Burger!</h1>
<h2>Order Here!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devour">Devour?</label><br>
    <input type="radio" name="devour" value="1" checked> Devoured!<br>
   <input type="radio" name="devoured" value="0"> Waiting
  </div>

  <button type="submit">Add this burger!</button>
</form>
